<Layout title="Datenschutzerklärung - KI-Lexikon">
  <style>
    .legal-content {
      max-width: 800px;
      margin: 0 auto;
    }
    
    .legal-content h1 {
      font-size: 2.5rem;
      color: #667eea;
      margin-bottom: 30px;
      font-weight: 700;
    }
    
    .legal-content h2 {
      font-size: 1.5rem;
      color: #764ba2;
      margin: 30px 0 15px 0;
    }
    
    .legal-content h3 {
      font-size: 1.2rem;
      color: #555;
      margin: 20px 0 10px 0;
    }
    
    .legal-content p {
      line-height: 1.8;
      margin-bottom: 15px;
      color: #444;
    }
    
    .legal-content ul {
      margin: 15px 0 15px 30px;
      line-height: 1.8;
    }
    
    .highlight-box {
      background: #f9f9f9;
      padding: 20px;
      border-left: 4px solid #667eea;
      margin: 20px 0;
      border-radius: 4px;
    }
  </style>

